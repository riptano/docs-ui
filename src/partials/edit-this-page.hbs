{{#if (and page.fileUri (not env.CI))}}
  <div class="ml-auto"><a href="{{page.fileUri}}">Edit this Page</a></div>
{{else if
  (and
    page.editUrl (or env.FORCE_SHOW_EDIT_PAGE_LINK (not page.origin.private))
  )
}}
<div class="ml-auto">
  <a href="{{page.editUrl}}">Edit this Page</a>
</div>
{{/if}}